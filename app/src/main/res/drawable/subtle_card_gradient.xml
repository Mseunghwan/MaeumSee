<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 미세한 그림자 효과 -->
    <item>
        <shape>
            <padding
                android:top="1dp"
                android:right="1dp"
                android:bottom="2dp"
                android:left="1dp" />
            <solid android:color="#0A000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <!-- 그라데이션 배경 -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:startColor="@color/card_gradient_start"
                android:endColor="@color/card_gradient_end"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>