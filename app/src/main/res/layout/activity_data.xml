<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일기장"
            android:textSize="28sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/welcome_gradient_start"
            android:letterSpacing="0.1"
            android:layout_marginBottom="24dp"
            android:includeFontPadding="false"/>

        <!-- Diary Card 1 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/background_end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024년 11월 20일"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘은 정말 행복한 하루였어! 아침부터 맑은 하늘을 보며 커피 한 잔을 마셨는데 기분이 정말 좋더라."
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Diary Card 2 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/background_end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024년 11월 19일"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오늘은 조금 바빴지만, 그래도 열심히 노력한 덕분에 많은 성과를 얻을 수 있었던 하루였어. 정말 뿌듯하다!"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Diary Card 3 -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/background_end">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2024년 11월 18일"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="오랜만에 친구들과 만나 즐거운 시간을 보냈어. 웃고 떠드는 동안 시간 가는 줄 몰랐네."
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:lineSpacingExtra="4dp"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
